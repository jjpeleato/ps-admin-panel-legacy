<?xml version="1.0"?>
<ruleset xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance"
	name="ps-admin-panel-legacy"
	xsi:noNamespaceSchemaLocation="https://raw.githubusercontent.com/squizlabs/PHP_CodeSniffer/master/phpcs.xsd"
>
	<!-- See https://github.com/squizlabs/PHP_CodeSniffer -->
	<!-- See https://www.php-fig.org/psr/psr-1/ -->
	<!-- See https://www.php-fig.org/psr/psr-2/ -->
	<!-- See https://www.php-fig.org/psr/psr-12/ -->
	<!-- See https://github.com/slevomat/coding-standard -->

	<!-- Set a description for this ruleset. -->
	<description>Sniffs for the coding standards of your project.</description>

	<!-- Strip the filepaths down to the relevant bit. -->
	<arg name="basepath" value="."/>

	<!-- Check src folder -->
	<file>.</file>

	<!-- Exclude assets folders and files from being checked. -->
  <exclude-pattern>node_modules/</exclude-pattern>
	<exclude-pattern>vendor/</exclude-pattern>

	<!-- Strip the filepaths down to the relevant bit. -->
	<arg name="parallel" value="8"/>

	<!-- Print with colors -->
	<arg name="colors"/>

	<!-- Only check the PHP files -->
	<arg name="extensions" value="php"/>

	<!--
	Pass some flags to PHPCS:
	- p flag: Show progress of the run.
	- s flag: Show sniff codes in all reports.
	-->
	<arg value="ps"/>

	<!-- Full report -->
	<arg name="report" value="full"/>

	<!-- Inherit rules from: -->
	<rule ref="PSR1"/>

	<!-- Inherit rules from: -->
	<rule ref="PSR12"/>

	<!-- Inherit rules from: -->
	<rule ref="Generic.Files.LineLength">
		<properties>
			<property name="lineLimit" value="140"/>
			<property name="absoluteLineLimit" value="140"/>
		</properties>
		<exclude-pattern>*_config.php</exclude-pattern>
	</rule>
</ruleset>
